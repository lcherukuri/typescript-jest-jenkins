{
  "compilerOptions": {
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "target": "esnext",
    "lib": [
      "esnext",
      "es2017",
      "es2016",
      "es2015",
      "dom",
      "es6",
      "es5"
    ],
    "module": "esnext",
    "sourceMap": false,
    "strict": true,
    "declaration": true,
    "declarationDir": "types",
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/__tests__/*"
  ]
}
