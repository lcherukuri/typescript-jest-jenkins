{
  "name": "@lcherukuri/typescript-jest-jenkins",
  "version": "0.0.1",
  "description": "sample app to demo javascript CICD",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "test": "jest --coverage",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "clean": "rm -rf coverage types",
    "clean-full": "rm -rf coverage types node_modules package-lock.json"
  },
  "author": "Lokesh Cherukuri",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.4",
    "jest": "^24.7.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "typescript": "^3.4.3"
  }
}
